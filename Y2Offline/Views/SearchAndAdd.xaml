<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Y2Offline.Views.SearchAndAdd">
    <ContentPage.Content>
        <StackLayout Margin="20, 10">
            <Entry Placeholder="Search Youtube or paste URL" x:Name="SearchBox" />
            <Button Text="Search" x:Name="SearchButton" Clicked="SearchButton_Clicked"></Button>
            
            <ScrollView>
                <StackLayout x:Name="vidview">
                    
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>